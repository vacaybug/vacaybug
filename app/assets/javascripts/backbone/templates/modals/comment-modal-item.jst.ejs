<div class="media">
    <a href="/<%= model.get('user').username %>" class="pull-left backbone">
        <img src="<%= model.get('user').avatar.thumb %>" class="media-object avatar-thumb">
    </a>
    <div class="media-body">
        <a href="/<%= model.get('user').username %>" class="comment-author"><%= model.get('user').full_name %></a>
        <span><%= _.escape(model.get('text')) %></span>
        <div class="comment-date"><%= $.timeago(model.get('created_at')) %></div>
    </div>
</div>
