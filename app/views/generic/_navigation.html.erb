<div class="navbar navbar-primary navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="nav-logo" href="/">
                <img src="/assets/nav-light-logo-beta.svg" width="180">
            </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="main-nav">
            <!-- User -->
            <% if (current_user) %>
                <ul class="nav navbar-nav navbar-left">
                    <form class="navbar-form js-top-search" role="search" action="javascript:void(0)">
                        <input type="text" class="form-control nav-search" placeholder="Search for your next getaway...">
                        <i class="fa fa-search"></i>
                    </form>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-tab" data-tab="search">
                        <a href="/discover" class="backbone"><i class="fa fa-globe"></i> Discover</a>
                    </li>
                    <li class="navbar-tab" data-tab="newsfeed">
                        <a href="/newsfeed" class="backbone"><i class="fa fa-rss"></i> Newsfeed</a>
                    </li>
<!--                     <li>
                        <a href="/users/<%= current_user.username %>"><i class="fa fa-comments"></i> Message</a>
                    </li> -->
                    <li class="navbar-tab" data-tab="">
                        <a href="/follower" class="backbone"><i class="fa fa-users"></i> Friends</a>
                    </li>
                    <li class="navbar-tab" data-tab="profile">
                        <a href="/<%= current_user.username %>" class="backbone"><i class="fa fa-user"></i> Profile</a>
                    </li>
                    <li class="dropdown">
                        <a href="/<%= current_user.username %>" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="<%= current_user.avatar(:thumb) %>" alt="<%= current_user.username %>" class="nav-avatar img-square" width="40" height="40">
                        </a>
                        <ul class="dropdown-menu top" role="menu">
                            <li>
                                <a class="backbone menu-profile" href="/<%= current_user.username %>"><i class="fa fa-fw icon-user-1"></i> Profile</a>
                            </li>
                            <li>
                                <%= link_to(destroy_user_session_path, :class => "menu-delete", :method => :delete) do %>
                                    <i class="fa fa-fw icon-unlock-fill"></i> Logout
                                <% end %>
                            </li>
                        </ul>
                    </li>
                </ul>
            <% else %>
                <form class="navbar-form navbar-right">
                    <a class="btn btn-default pull-right" href="/login">Log in</a>
                    <h5>Already have an account?</h5>
                </form>
            <% end %>
        </div>
    </div>
</div>
<div id="notification" class="flash-notification">
</div>