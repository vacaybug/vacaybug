
<p>Username: <%=h @user.email %></p>


<h2>Friends</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%=h friendship.friend.email %>
      (<%= link_to "remove", friendship_path(:friend_id => @user), :method => :delete %>)
    </li>
  <% end %>
</ul>

<p><%= link_to "Find Friends", users_path %></p>
